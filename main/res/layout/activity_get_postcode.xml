<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/home1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_margin="40dp"
        android:background="@drawable/roundbutton">


        <TextView
            android:id="@+id/postcode_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:paddingTop="30dp"
            android:text="What is your postcode?"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postcode"
                android:inputType="textWebEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Radius in meters"
                android:inputType="textWebEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/radius_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prefered radius in meteres"
                android:inputType="textPostalAddress"
                android:textStyle="bold" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:spinnerMode="dropdown"
            android:paddingTop="20dp"
            ></Spinner>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/input_booking_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:inputType="textPostalAddress"
                android:textStyle="bold" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_date"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="0dp"
        android:padding="1dp"
        android:onClick="selectDate"
        android:text="Pick Date" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/booking_time_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:inputType="textPostalAddress"
                android:textStyle="bold" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_timeFrom"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/holo_blue_dark"
            android:elevation="0dp"
            android:padding="1dp"
            android:onClick="selectFromTime"
            android:text="Pick From Time" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/booking_time_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time"
                android:inputType="textPostalAddress"
                android:textStyle="bold" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_timeTill"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/holo_blue_dark"
            android:elevation="0dp"
            android:padding="1dp"
            android:onClick="selectTillTime"
            android:text="Pick End Time" />


        <!-- Lookup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_showbooking"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Show slots" />


    </LinearLayout>
</ScrollView>